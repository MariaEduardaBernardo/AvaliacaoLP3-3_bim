@model List<Avaliacao3Bim.ViewModels.LojaViewModel>
@{
    ViewData["Title"] = "Lojas";
}

<h2>Lojas / Kiosques</h2>

@if(Model.Count == 0)
{
    <p>Não há lojas cadastradas.</p>
} 
else
{
    @foreach(var loja in Model)
    {
        <div id="tabela">
            <h3>@loja.Nome</h3>
            <p>Id: @loja.Id</p>
            <p>Piso: @loja.Piso</p>
            <p>Nome: @loja.Nome</p>
            <p>Descricao: @loja.Desc</p>
            <p>Tipo: @loja.Tipo</p>
            <p>E-mail: @loja.Email</p>
        </div>
    }
}

<style>
    #tabela{
        margin-top: 2em;
        border-bottom : 1px solid;
    }
</style>