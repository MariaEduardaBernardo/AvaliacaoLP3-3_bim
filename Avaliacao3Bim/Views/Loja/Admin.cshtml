@model List<Avaliacao3Bim.ViewModels.LojaViewModel>
@{
    ViewData["Title"] = "Gerenciar Lojas";
}

<h2>Lojas / Kiosques</h2>

@if(Model.Count == 0)
{
    <p>Não há lojas cadastradas.</p>
    <a href="/Loja/Cadastro"><button>Cadastrar Loja</button></a>
} 
else
{
    @foreach(var loja in Model)
    {
        <br>
        <h3>@loja.Nome</h3>
        <p>Id: @loja.Id</p>
        <p>Piso: @loja.Piso</p>
        <p>Descrição: @loja.Desc</p>
        <p>Tipo: @loja.Tipo</p>
        <p>E-mail: @loja.Email</p>
        <a href="/Loja/Show/@loja.Id"><button>Detalhes</button></a>
        <a href="/Loja/ExcluirLoja/@loja.Id"><button>Excluir Loja</button></a>
        <hr>
    }
}